{
	"manifest_version": 2,

	"name": "Feed Cleanup for YouTubeâ„¢",
	"description": "Collapses watched videos within a YouTube feed.",
	"version": "0.4",

	"icons": {"128": "yfc_128.png"},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/feed/*"],
			"js": ["yfc.js"]
		}
	],

	"page_action": {
		"default_icon": "yfc_19.png",
		"default_title": "Feed Cleanup",
		"default_popup": "yfc_popup.html"
	},

	"permissions": [
		"storage"
	]
}
